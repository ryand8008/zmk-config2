#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;

        zmk,matrix_transform = &default_transform;
    };

    /*
     * This transform corresponds to the 60% left without macro keypad and 65% right, even this
     * combination of PCBs can have keys in different locations based on configuration.
     */
        default_transform: keymap_transform_0 {
                compatible = "zmk,matrix-transform";
                columns = <15>;
                rows = <6>;
                map = <
RC(4, 3) RC(0, 7), /**/ RC(0, 0), RC(0, 1), RC(0, 2), RC(0, 3), RC(0, 4), RC(0, 5), RC(0, 6), RC(6, 0), RC(6, 1), RC(6, 2), RC(6, 3), RC(6, 4), RC(6, 5), RC(6, 6), RC(6, 7), RC(11, 6),
RC(1, 6), RC(1, 7), /**/ RC(1, 0), RC(1, 1), RC(1, 2), RC(1, 3), RC(1, 4), RC(1, 5), RC(7, 0), RC(7, 1), RC(7, 2), RC(7, 3), RC(7, 4), RC(7, 5), RC(7, 6), RC(7, 7), RC(11, 7),
RC(2, 6), RC(2, 7), /**/ RC(2, 0), RC(2, 1), RC(2, 2), RC(2, 3), RC(2, 4), RC(2, 5), RC(8, 0), RC(8, 1), RC(8, 2), RC(8, 3), RC(8, 4), RC(8, 5), RC(8, 7), RC(8, 6), RC(11, 6),
RC(3, 1), RC(3, 7), /**/ RC(3, 0), RC(3, 2), RC(3, 3), RC(3, 4), RC(3, 5), RC(3, 6), RC(9, 0), RC(9, 1), RC(9, 2), RC(9, 3), RC(9, 5), RC(9, 6), RC(9, 7), RC(9, 4),
RC(4, 5), RC(4, 7), /**/ RC(4, 0), RC(4, 1), RC(4, 2), RC(4, 3), RC(4, 4), RC(4, 6), RC(10, 0), RC(10, 1), RC(10, 3), RC(10, 4), RC(10, 5), RC(10, 6), RC(10, 7), RC(10, 2)
        >;
    };
};