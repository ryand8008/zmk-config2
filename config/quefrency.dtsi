#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;

        zmk,matrix_transform = &default_transform;
    };

    /*
     * This transform corresponds to the 60% left without macro keypad and 65% right, even this
     * combination of PCBs can have keys in different locations based on configuration.
     */
        default_transform: keymap_transform_0 {
                compatible = "zmk,matrix-transform";
                columns = <4>;
                rows = <8>;
                map = <
              RC(0,0) RC(0,2) RC(0,3) RC(0,3)
              RC(1,0) RC(1,1) RC(1,2) RC(1,3)
              RC(2,0) RC(2,1) RC(2,2) RC(2,3)
              RC(3,0) RC(3,1) RC(3,2) RC(3,3)
              RC(4,0) RC(4,1) RC(4,2) RC(4,3)
              RC(5,0) RC(5,1) RC(5,2) RC(5,3)
              RC(6,0) RC(6,1) RC(6,2) RC(6,3)
              RC(7,0) RC(7,1) RC(7,2) RC(7,3)
>;


    };
};